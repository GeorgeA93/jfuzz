{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "additionalProperties": false,
  "properties": {
    "report_type": {
      "description": "The type of report this entry is from.",
      "enum": ["ca_pad_rbc_debit_ackowledgement_report"]
    },
    "type": {
      "description": "Validation report result code",
      "enum": ["accepted", "confirmed", "rejected", "pending"]
    },
    "amount": {
      "description": "Amount in cents",
      "type": "integer"
    },
    "requested_collection_date": {
      "description": "Debit collection date (YYYY-MM-DD)",
      "type": "string"
    },
    "internal_reference": {
      "description": "End to end debit id",
      "type": "string"
    },
    "date_time": {
      "description": "Report creation date time (YYYY-MM-DD HH:MM:SS +1100)",
      "type": "string"
    },
    "message_id": {
      "description": "Unique id assigned by RBC to the report",
      "type": "string"
    },
    "original_message_id": {
      "description": "Message id from the submission pain_001 file",
      "type": "string"
    },
    "reason_code": {
      "description": "Rejection reason code",
      "type": "string"
    },
    "additional_info": {
      "description": "Rejection reason explanation",
      "type": "string"
    }
  },
  "type": "object",
  "required": [
    "report_type",
    "type",
    "date_time",
    "message_id",
    "internal_reference",
    "amount",
    "requested_collection_date",
    "original_message_id"
  ]
}
